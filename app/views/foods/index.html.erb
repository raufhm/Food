<h1>Makanan <small>list</small></h1>
<hr>
<div class="pull-right">
	<%= link_to 'Tambah Makanan', new_food_path, class: 'btn btn-primary'%>
</div>

<% nomor=1 %>
<table class="table">
	<thead>
		<tr>
			<td>No</td>
			<td>Nama Makanan</td>
			<td>Harga</td>
			<td colspan="3"></td>
		</tr>
	</thead>
	<tbody>
		<% @foods.each do |f| %>
		<tr>
			<td><%= nomor %></td>
			<td><%= f.nama %></td>
			<td><%= f.harga %></td>
			<td><%= link_to 'Lihat', f, class: 'btn btn-primary' %></td>
			<td><%= link_to 'Ubah', edit_food_path(f), class: 'btn btn-warning' %></td>
			<td><%= link_to 'Hapus', f, method: :delete, class: 'btn btn-danger' %></td>
		</tr>
		<% nomor+=1 %>
		<% end %>
	</tbody>
</table>